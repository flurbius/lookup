{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [

        {
            "type": "node",
            "request": "launch",
            "name": "build lookup no args",
            "program": "${workspaceFolder}/dist/lookup.js",
            "sourceMaps": true,
            "preLaunchTask": "tsc: build - tsconfig.json",
            "outFiles": [
                "${workspaceFolder}/dist/**/*.js"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "build, lookup --version",
            "program": "${workspaceFolder}/dist/lookup.js",
            "sourceMaps": true,
            "args": [
                "--version"
            ],
            "preLaunchTask": "tsc: build - tsconfig.json",
            "outFiles": [ "${workspaceFolder}/dist/**/*.js" ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "lookup --help",
            "program": "${workspaceFolder}/dist/lookup.js",
            "sourceMaps": true,
            "args": [
                "--help"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Lookup dir-dir",
            "program": "${workspaceFolder}/dist/lookup.js",
            "sourceMaps": true,
            "args": [
                "/home/flurbius/lookup",
                "--output /home/flurbius/lookup/output",
                "--format md"
            ],
            "preLaunchTask": "tsc: build - tsconfig.json",
            "outFiles": [ "${workspaceFolder}/dist/**/*.js" ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Lookup example",
            "program": "${workspaceFolder}/dist/lookup.js",
            "sourceMaps": true,
            "args": [
                "${workspaceFolder}/example.txt",
            ],
            "preLaunchTask": "tsc: build - tsconfig.json",
            "outFiles": [ "${workspaceFolder}/dist/**/*.js" ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "build lookup test.txt",
            "program": "${workspaceFolder}/dist/lookup.js",
            "sourceMaps": true,
            "args": [
                "--output=/home/flurbius/lookup/output/",
                "--format=md",
                "test.txt"
            ],
            "preLaunchTask": "tsc: build - tsconfig.json",
            "outFiles": [ "${workspaceFolder}/dist/**/*.js" ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "1 file - md",
            "program": "${workspaceFolder}/dist/lookup.js",
            "sourceMaps": true,
            "args": [
                "--format=html",
                "test.txt"
            ],
            "preLaunchTask": "tsc: build - tsconfig.json",
            "outFiles": [ "${workspaceFolder}/dist/**/*.js" ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "build lookup dir -txt",
            "program": "${workspaceFolder}/dist/lookup.js",
            "sourceMaps": true,
            "args": [
                "/home/flurbius/lookup/",
                "--format=txt"
            ],
            "preLaunchTask": "tsc: build - tsconfig.json",
            "outFiles": [ "${workspaceFolder}/dist/**/*.js" ]
        },
    ]
}